{
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./",
    "lib": ["esnext"],
    "target": "ESNext",
    "moduleResolution": "NodeNext",
    "module": "NodeNext",
    "strict": false,
    "sourceMap": true,
    "esModuleInterop": true,
    "declaration": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": ["src/**/*.ts", "models/**/*.ts", "config/**/*.ts", "*.ts"],
  "exclude": ["node_modules"]
}
